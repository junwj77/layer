<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StadiumActivity">

    <Button
        android:id="@+id/stadium_btn"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="343dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="경기장 선택"
        app:backgroundTint="#C6918C8C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/image_stadium"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/stadium_btn"
        app:layout_constraintEnd_toStartOf="@+id/stadium_btn"
        app:layout_constraintTop_toTopOf="@+id/stadium_btn"
        app:srcCompat="@drawable/stadium" />

    <Button
        android:id="@+id/next_btns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="124dp"
        android:background="@drawable/button_next"
        android:text="다음"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/stadium_btn"
        app:layout_constraintStart_toEndOf="@+id/before_btn"
        app:layout_constraintTop_toBottomOf="@+id/stadium_btn" />

    <Button
        android:id="@+id/before_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/button"
        android:text="이전"
        android:textColor="#0000FF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/next_btn"
        app:layout_constraintStart_toStartOf="@+id/stadium_btn"
        app:layout_constraintTop_toBottomOf="@+id/stadium_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>